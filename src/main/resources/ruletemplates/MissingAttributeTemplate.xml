<rule-template xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="../schema/RuleTemplate.xsd">

  <rule node-name="reporting-center" 
    attribute-name="reporting-center-id" 
    miring-rule-id="1.2.b" 
    severity="miring" />
    
  <rule node-name="reporting-center" 
    attribute-name="reporting-center-context" 
    miring-rule-id="1.2.b" 
    severity="miring" />
    
  <rule node-name="sbt-ngs" 
    attribute-name="test-id" 
    miring-rule-id="1.3.a" 
    severity="miring" 
    solution-text="test-id and test-id-source should refer to a valid NCBI-GRT procedure." />
    
  <rule node-name="sbt-ngs" 
    attribute-name="test-id-source" 
    miring-rule-id="1.3.a" 
    severity="miring" 
    solution-text="test-id and test-id-source should refer to a valid NCBI-GRT procedure." />
    
  <rule node-name="raw-reads" 
    attribute-name="availability" 
    miring-rule-id="1.5.b" 
    severity="miring" />
  
  <rule node-name="allele-assignment" 
    attribute-name="allele-db" 
    miring-rule-id="2.1.b" 
    severity="miring" />
    
  <rule node-name="allele-assignment" 
    attribute-name="allele-version" 
    miring-rule-id="2.1.c" 
    severity="miring" />
    
  <rule node-name="reference-sequence" 
    attribute-name="id" 
    miring-rule-id="2.2.b" 
    severity="miring" />
    
  <rule node-name="reference-sequence" 
    attribute-name="name" 
    miring-rule-id="2.2.b" 
    severity="miring" />
    
  <rule node-name="reference-sequence" 
    attribute-name="start" 
    miring-rule-id="2.2.b" 
    severity="miring" />
    
  <rule node-name="reference-sequence" 
    attribute-name="end" 
    miring-rule-id="2.2.b" 
    severity="miring" />
    
  <rule node-name="reference-sequence" 
    attribute-name="accession" 
    miring-rule-id="2.2.b" 
    severity="warning" 
    solution-text="accession and uri attributes are expected for unambiguous identification of the publicly hosted reference sequence.  Include them if they are available." />
    
  <rule node-name="reference-sequence" 
    attribute-name="uri" 
    miring-rule-id="2.2.b" 
    severity="warning" 
    solution-text="accession and uri attributes are expected for unambiguous identification of the publicly hosted reference sequence.  Include them if they are available." />

  <rule node-name="reference-database" 
    attribute-name="curated" 
    miring-rule-id="2.3.b" 
    severity="miring" />
  
  <rule node-name="consensus-sequence-block" 
    attribute-name="description" 
    miring-rule-id="4.2.a" 
    severity="miring" />
    
  <rule node-name="consensus-sequence-block" 
    attribute-name="reference-sequence-id" 
    miring-rule-id="4.2.2.a" 
    severity="miring" />
    
  <rule node-name="consensus-sequence-block" 
    attribute-name="start" 
    miring-rule-id="4.2.3.a" 
    severity="miring" />
    
  <rule node-name="consensus-sequence-block" 
    attribute-name="end" 
    miring-rule-id="4.2.3.a" 
    severity="miring" />
    
  <rule node-name="consensus-sequence-block" 
    attribute-name="phase-set" 
    miring-rule-id="4.2.4.a" 
    severity="warning" 
    solution-text="Phasing information is not strictly required, this is just a warning." />
    
  <rule node-name="consensus-sequence-block" 
    attribute-name="expected-copy-number" 
    miring-rule-id="4.2.5.a" 
    severity="miring" />
    
  <rule node-name="consensus-sequence-block" 
    attribute-name="continuity" 
    miring-rule-id="4.2.5.a" 
    severity="miring" />
    
  <rule node-name="variant" 
    attribute-name="id" 
    miring-rule-id="5.3.a" 
    severity="miring" />
    
  <rule node-name="variant" 
    attribute-name="reference-bases" 
    miring-rule-id="5.4.a" 
    severity="miring" />
    
  <rule node-name="variant" 
    attribute-name="alternate-bases" 
    miring-rule-id="5.5.a" 
    severity="miring" />
    
  <rule node-name="variant" 
    attribute-name="quality-score" 
    miring-rule-id="5.6.a" 
    severity="miring" />
    
  <rule node-name="variant" 
    attribute-name="filter" 
    miring-rule-id="5.7.a" 
    severity="miring" />

</rule-template>


